{
  "manifest_version": 3,
  "name": "Ama(Summa)rize",
  "version": "0.1.0",
  "description": "Summarize reviews from Amazon product pages",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.perplexity.ai/*",
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.com.au/*"
  ],
  "action": {
    "default_title": "Amarize Extension",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.com.br/*",
        "https://*.amazon.com.au/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "settings.svg",
        "icon_128.png",
        "popup.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}