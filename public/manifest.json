{
  "manifest_version": 3,
  "name": "Amarize Extension",
  "version": "0.1.0",
  "description": "Summarize reviews from Amazon product pages",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://api.openai.com/*",
    "https://api.perplexity.ai/*"
  ],
  "action": {
    "default_title": "Amarize Extension",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}